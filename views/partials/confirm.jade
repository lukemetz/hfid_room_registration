.container
    .row
        h1 Confirm your Reservation
    .row
        .large-12.columns
            form
                fieldset
                    label Event Name:
                    input(type='text', placeholder='MatSci Meeting')
                    label Customer/Organization:
                    input(type='text', ng-model="name")
                    label Email:
                    input(type='text', ng-model="email")
                    label.checkbox
                        input(type='checkbox')
                        |Public
        .row
          .large-12.columns.panel
              h3 You have reserved:
              div(ng-if="reservations")
                .row
                  .large-4.columns
                    p
                      b Room
                  .large-4.columns
                    p
                      b Date
                  .large-4.columns
                    p
                      b Time
                .row(ng-repeat="res in reservations")
                  .large-4.columns 
                    p {{res.room}}
                  .large-4.columns
                    p {{res.date}}
                  .large-4.columns
                    p {{res.start}} - {{res.end}}

              div(ng-if="!reservations")
                h4 Room: {{roomName}}
                h4 Date: {{date}}
                h4 Time: {{start}}
              a.button.btn-primary.btn-primary#backButton(type='button', href="/#/roomSelect") Back 
              a.button.btn-primary.btn-primary#confirmButton(type='button', ng-click="confirmButton()", href="/#/home") Confirm
